<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="5">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#DCC6E0"
            android:text="#DCC6E0"
            android:layout_weight="1"
            style="@style/color_box"
            android:id="@+id/textView" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#663399"
            android:text="#663399"
            android:layout_weight="1"
            style="@style/color_box"
            android:id="@+id/textView2" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#674172"
            android:text="#674172"
            android:layout_weight="1"
            style="@style/color_box"
            android:id="@+id/textView3" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#AEA8D3"
            android:text="#AEA8D3"
            android:layout_weight="1"
            style="@style/color_box"
            android:id="@+id/textView4" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#913D88"
            android:text="#913D88"
            android:layout_weight="1"
            style="@style/color_box"
            android:id="@+id/textView5" />

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="5"
        >

        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#9A12B3"
            android:text="#9A12B3"
            style="@style/color_box"
            android:layout_weight="1"
            android:id="@+id/textView6" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#BF55EC"
            android:text="#BF55EC"
            style="@style/color_box"
            android:layout_weight="1"
            android:id="@+id/textView7" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#BE90D4"
            android:text="#BE90D4"
            style="@style/color_box"
            android:layout_weight="1"
            android:id="@+id/textView8" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#8E44AD"
            android:text="#8E44AD"
            style="@style/color_box"
            android:layout_weight="1"
            android:id="@+id/textView9" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#9B59B6"
            android:text="#9B59B6"
            style="@style/color_box"
            android:layout_weight="1"
            android:id="@+id/textView10" />

    </TableRow>

</TableLayout>

</LinearLayout>