<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/yellow_colour_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#F5D76E"
        android:text="#F5D76E"
        android:layout_weight="1"
        style="@style/color_box"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#F7CA18"
        android:text="#F7CA18"
        android:layout_weight="1"
        style="@style/color_box"
        android:id="@+id/textView2" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#F4D03F"
            android:text="#F4D03F"
            android:layout_weight="1"
            style="@style/color_box"
            android:id="@+id/textView3" />

    </TableRow>
    </TableLayout>

    <com.google.android.gms.ads.AdView android:id="@+id/adView"
        android:layout_below="@id/yellow_colour_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="7161204414819276"/>
</RelativeLayout>