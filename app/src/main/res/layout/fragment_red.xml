<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">


    <TableLayout
        android:id="@+id/red_colour_table"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="5"
            >

            <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/box_height"
            android:background="@color/chestnut_rose"
            android:text="#D24D57"
            android:layout_weight="1"
            style="@style/color_box"
            android:id="@+id/textView" />

            <TextView
            android:layout_width="match_parent"
             android:layout_height="@dimen/box_height"
              android:background="@color/pomegranate"
              android:text="#F22613"
               android:layout_weight="1"
               style="@style/color_box"
               android:id="@+id/textView2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/box_height"
                android:background="@color/red"
                android:text="#FF0000"
                android:layout_weight="1"
                style="@style/color_box"
                android:id="@+id/textView3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/box_height"
                android:background="@color/thunderbird"
                android:text="#D91E18"
                android:layout_weight="1"
                style="@style/color_box"
                android:id="@+id/textView4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/box_height"
                android:background="@color/old_brick"
                android:text="#96281B"
                android:layout_weight="1"
                style="@style/color_box"
                android:id="@+id/textView5" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="5"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/box_height"
                android:background="#EF4836"
                android:text="#EF4836"
                android:layout_weight="1"
                style="@style/color_box"
                android:id="@+id/textView6" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/box_height"
                android:background="#D64541"
                android:text="#D64541"
                android:layout_weight="1"
                style="@style/color_box"
                android:id="@+id/textView7" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/box_height"
                android:background="#C0392B"
                android:text="#C0392B"
                android:layout_weight="1"
                style="@style/color_box"
                android:id="@+id/textView8" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/box_height"
                android:background="#CF000F"
                android:text="#CF000F"
                android:layout_weight="1"
                style="@style/color_box"
                android:id="@+id/textView9" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/box_height"
                android:background="#E74C3C"
                android:text="#E74C3C"
                android:layout_weight="1"
                style="@style/color_box"
                android:id="@+id/textView10" />

            </TableRow>

    </TableLayout>

    <com.google.android.gms.ads.AdView
        android:layout_below="@id/red_colour_table"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="7161204414819276"/>

</RelativeLayout>
