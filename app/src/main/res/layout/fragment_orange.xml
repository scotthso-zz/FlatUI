<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:id="@+id/scrollView" >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:weightSum="5">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#FDE3A7"
                android:text="#FDE3A7"
                android:layout_weight="1"
                style="@style/color_box"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#F89406"
                android:text="#F89406"
                android:layout_weight="1"
                style="@style/color_box"
                android:id="@+id/textView2" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#EB9532"
                android:text="#EB9532"
                android:layout_weight="1"
                style="@style/color_box"
                android:id="@+id/textView3" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#E87E04"
                android:text="#E87E04"
                android:layout_weight="1"
                style="@style/color_box"
                android:id="@+id/textView4" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#F4B350"
                android:text="#F4B350"
                android:layout_weight="1"
                style="@style/color_box"
                android:id="@+id/textView5" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="5"
            >

            <TextView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#F2784B"
                android:text="#F2784B"
                style="@style/color_box"
                android:layout_weight="1"
                android:id="@+id/textView6" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#EB974E"
                android:text="#EB974E"
                style="@style/color_box"
                android:layout_weight="1"
                android:id="@+id/textView7" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#F5AB35"
                android:text="#F5AB35"
                style="@style/color_box"
                android:layout_weight="1"
                android:id="@+id/textView8" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#D35400"
                android:text="#D35400"
                style="@style/color_box"
                android:layout_weight="1"
                android:id="@+id/textView9" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#F39C12"
                android:text="#F39C12"
                style="@style/color_box"
                android:layout_weight="1"
                android:id="@+id/textView10" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="5"
            >

            <TextView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#F9690E"
                android:text="#F9690E"
                style="@style/color_box"
                android:layout_weight=".1"
                android:id="@+id/textView11" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#F9BF3B"
                android:text="#F9BF3B"
                style="@style/color_box"
                android:layout_weight=".1"
                android:id="@+id/textView12" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#F27935"
                android:text="#F27935"
                style="@style/color_box"
                android:layout_weight=".1"
                android:id="@+id/textView13" />
            <TextView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#E67E22"
                android:text="#E67E22"
                style="@style/color_box"
                android:layout_weight=".1"
                android:id="@+id/textView14" />


        </TableRow>

    </TableLayout>
</ScrollView>

</LinearLayout>